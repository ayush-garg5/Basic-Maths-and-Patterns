void alphaHill(int n) {
    // Write your code here.
    for( int i = 1; i <= n; i++) {
         char ch = 'A' - 1;
        for( int j = 1; j <= 2*n - 1; j++) {
            if( j >= n - i + 1  && j <= n + i - 1 ) {
              if (j <= n) {
               ch++;
              }
            else ch--;
             cout << ch << " ";
            }
            else cout << "  ";
        }
        cout << endl;
    }
 }
